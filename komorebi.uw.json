{
    "$schema":"https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.29/schema.json",
    "app_specific_configuration_path":"$Env:USERPROFILE/applications.yaml",
    "window_hiding_behaviour":"Cloak",
    "cross_monitor_move_behaviour":"Insert",
    "default_workspace_padding":20,
    "default_container_padding":10,
    "mouse_follows_focus":false,
    "border":true,
    "border_width":3,
    "border_offset":-1,
    "theme":{
        "palette":"Base16",
        "name":"Vesper",
        "unfocused_border":"Base03",
        "bar_accent":"Base0D"
    },
    "stackbar":{
        "height":40,
        "mode":"OnStack",
        "tabs":{
            "width":300
        }
    },
    "monitors":[
        {
            "workspaces":[
                {
                    "name":"I",
                    "layout":"BSP"
                },
            ]
        },
        {
            "window_based_work_area_offset":{
                "bottom":0,
                "left":1000,
                "right":2000,
                "top":0
            },
            "workspaces":[
                {
                    "name":"dev",
                    "layout":"UltrawideVerticalStack",
                    "initial_workspace_rules":[
                        {
                            "kind":"Exe",
                            "id":"rider64.exe",
                            "matching_strategy":"Equals"
                        }
                    ]
                },
                {
                    "name":"cli",
                    "layout":"UltrawideVerticalStack",
                    "initial_workspace_rules":[
                        {
                            "kind":"Exe",
                            "id":"wezterm-gui.exe",
                            "matching_strategy":"Equals"
                        },
                        {
                            "kind":"Exe",
                            "id":"WindowsTerminal.exe",
                            "matching_strategy":"Equals"
                        },
                        {
                            "kind":"Title",
                            "id":"pwsh",
                            "matching_strategy":"Contains"
                        },
                        {
                            "kind":"Title",
                            "id":"console",
                            "matching_strategy":"Contains"
                        },

                    ]
                },
                {
                    "name":"env",
                    "layout":"UltrawideVerticalStack",
                    "initial_workspace_rules":[
                        {
                            "kind":"Exe",
                            "id":"TPG.Sim.Leo2A8Nor",
                            "matching_strategy":"Contains"
                        },
                        {
                            "kind":"Exe",
                            "id":"TPG.FN.CombatVehicle.ClientMonitor",
                            "matching_strategy":"Contains"
                        },
                        {
                            "kind":"Exe",
                            "id":"TPG.CombatVehicle.ICS.Device.Host",
                            "matching_strategy":"Contains"
                        },
                        {
                            "kind":"Exe",
                            "id":"TPG.FN.Comms.Service",
                            "matching_strategy":"Contains"
                        },
                        {
                            "kind":"Exe",
                            "id":"VSD.exe",
                            "matching_strategy":"Contains"
                        },
                    ]
                },
                {
                    "name":"web",
                    "layout":"UltrawideVerticalStack",
                    "initial_workspace_rules":[
                        {
                            "kind":"Exe",
                            "id":"opera.exe",
                            "matching_strategy":"Equals"
                        }
                    ]
                },
                {
                    "name":"comms",
                    "layout":"Columns",
                    "initial_workspace_rules":[
                        {
                            "kind":"Exe",
                            "id":"ms-teams",
                            "matching_strategy":"Contains"
                        },
                        {
                            "kind":"Exe",
                            "id":"slack",
                            "matching_strategy":"Contains"
                        },
                        {
                            "kind":"Exe",
                            "id":"OUTLOOK",
                            "matching_strategy":"Contains"
                        },
                        {
                            "kind":"Title",
                            "id":"Outlook",
                            "matching_strategy":"Contains"
                        }
                    ]
                },
                {
                    "name":"misc",
                    "layout":"UltrawideVerticalStack",
                    "initial_workspace_rules":[
                        {
                            "kind":"Exe",
                            "id":"Spotify.exe",
                            "matching_strategy":"Equals"
                        }
                    ]
                },
                {
                    "name": "IV",
                    "layout":"UltrawideVerticalStack"
                },
                {
                    "name": "V",
                    "layout":"UltrawideVerticalStack"
                },
                {
                    "name": "IX",
                    "layout":"UltrawideVerticalStack"
                },
                {
                    "name": "X",
                    "layout":"UltrawideVerticalStack"
                }
            ]
        },
    ]
}
