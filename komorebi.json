{
    "$schema":"https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.29/schema.json",
    "app_specific_configuration_path":"$Env:USERPROFILE/applications.yaml",
    "window_hiding_behaviour":"Cloak",
    "cross_monitor_move_behaviour":"Insert",
    "default_workspace_padding":10,
    "default_container_padding":10,
    "border":true,
    "border_width":3,
    "mouse_follows_focus":false,
    "border_offset":-1,
    "theme":{
        "palette":"Base16",
        "name":"Vesper",
        "unfocused_border":"Base03",
        "bar_accent":"Base0D"
    },
    "stackbar":{
        "height":40,
        "mode":"OnStack",
        "tabs":{
            "width":300
        }
    },
    "monitors":[
        {
            "workspaces":[
                {
                    "name":"web",
                    "layout":"BSP",
                    "intial_workspace_rules":[
                        {
                            "kind":"Exe",
                            "id":"opera.exe",
                            "matching_strategy":"Equals"
                        }
                    ]
                },
                {
                    "name":"comms",
                    "layout":"BSP",
                    "initial_workspace_rules":[
                        {
                            "kind":"Exe",
                            "id":"ms-teams.exe",
                            "matching_strategy":"Equals"
                        },
                        {
                            "kind":"Exe",
                            "id":"slack.exe",
                            "matching_strategy":"Equals"
                        },
                        {
                            "kind":"Exe",
                            "id":"OUTLOOK.exe",
                            "matching_strategy":"Equals"
                        }
                    ]
                },
                {
                    "name":"div",
                    "layout":"BSP",
                    "workspace_rules":[
                        {
                            "kind":"Exe",
                            "id":"Spotify.exe",
                            "matching_strategy":"Equals"
                        }
                    ]
                }
            ]
        },
        {
            "workspaces":[
                {
                    "name":"dev",
                    "layout":"BSP",
                    "initial_workspace_rules":[
                        {
                            "kind":"Exe",
                            "id":"rider64.exe",
                            "matching_strategy":"Equals"
                        }
                    ]
                },
                {
                    "name":"cli",
                    "layout":"BSP",
                    "initial_workspace_rules":[
                        {
                            "kind":"Exe",
                            "id":"wezterm-gui.exe",
                            "matching_strategy":"Equals"
                        }
                    ]
                },
                {
                    "name":"env",
                    "layout":"UltrawideVerticalStack",
                    "initial_workspace_rules":[
                        {
                            "kind":"Exe",
                            "id":"TPG.Sim.Leo2A8Nor",
                            "matching_strategy":"Contains"
                        },
                        {
                            "kind":"Exe",
                            "id":"TPG.FN.CombatVehicle.ClientMonitor",
                            "matching_strategy":"Contains"
                        },
                        {
                            "kind":"Exe",
                            "id":"TPG.CombatVehicle.ICS.Device.Host",
                            "matching_strategy":"Contains"
                        },
                        {
                            "kind":"Exe",
                            "id":"TPG.FN.Comms.Service",
                            "matching_strategy":"Contains"
                        },
                        {
                            "kind":"Exe",
                            "id":"VSD.exe",
                            "matching_strategy":"Contains"
                        },
                    ]
                }
            ]
        }
    ]
}
